import { MovableRectangle } from "./movable-rectangle.slint";
import { SingleSideWrapArrowEdge } from "./edge/edge.slint";

export component SlintDemoWindow inherits Window {
    width: 800px;
    height: 600px;

    box1 := MovableRectangle {
        x: parent.width / 4 - 50px;
        y: parent.height / 4 - 50px;
        width: 100px;
        height: 150px;
        background: red;

        Text {
            text: "1";
            font-size: 50px;
        }
    }

    box2 := MovableRectangle {
        x: parent.width * 3 / 4 - 50px;
        y: parent.height * 3 / 4 - 50px;
        width: 100px;
        height: 100px;
        background: green;

        Text {
            text: "2";
            font-size: 50px;
        }
    }

    SingleSideWrapArrowEdge {
        from: box1.rect-props;
        to: box2.rect-props;
        arrow-size: 10;
    }
}
