import { ScrollView } from "std-widgets.slint";

import { Action, ActionUtils } from "./shapes/action.slint";
import { MovableRectangle } from "./shapes/movable-rectangle.slint";
import { SingleSideWrapArrowEdge } from "./edge/edge.slint";
import { UiNodeData, UiEdgeData, UiDimention, UiAction, UiLink } from "./types.slint";
import { FnUtils } from "./utils.slint";

export global AppState {
    in-out property <length> viewport-width;
    in-out property <length> viewport-height;

    in-out property <[UiNodeData]> nodes: [];
    in-out property <[UiEdgeData]> edges: [];

    in-out property <[UiAction]> actions: [];
    in-out property <[UiLink]> links: [];

    in-out property <int> selected-index;

    callback update-node(UiNodeData);
    callback save();
}

component App {

    ScrollView {
        viewport-width: AppState.viewport-width + 500px;
        viewport-height: AppState.viewport-height + 500px;

        Rectangle {
            x: 0;
            y: 0;
            width: parent.viewport-width;
            height: parent.viewport-height;
            background: #e9e9e9;
        }

        for action[i] in AppState.actions: Action {
            x: action.x;
            y: action.y;
            selected: AppState.selected-index == i;

            name: action.id;
            inputs: action.inputs;
            outputs: action.outputs;
            outcomes: action.outcomes;

            on-clicked => {
                AppState.selected-index = i;
            }

            on-move => {
                AppState.actions[i].x = self.x;
                AppState.actions[i].y = self.y;
            }
        }

        for link[i] in AppState.links: SingleSideWrapArrowEdge {
            z: 100;
            from-y-offset: ActionUtils.calculate-outcome-y-offset(link.source_outcome_index);
            from: {
                x: AppState.actions[link.source_index].x,
                y: AppState.actions[link.source_index].y,
                width: 200px,
                height: ActionUtils.calculate-action-height(
                    AppState.actions[link.source_index].outcomes.length,
                    AppState.actions[link.source_index].inputs.length,
                    AppState.actions[link.source_index].outputs.length
                ),
            };
            to: {
                x: AppState.actions[link.target_index].x,
                y: AppState.actions[link.target_index].y,
                width: 200px,
                height: ActionUtils.calculate-action-height(
                    AppState.actions[link.target_index].outcomes.length,
                    AppState.actions[link.target_index].inputs.length,
                    AppState.actions[link.target_index].outputs.length
                ),
            };
        }
    }
}

export component SlintDemoWindow inherits Window {
    min-width: 800px;
    min-height: 600px;

    App {
        width: root.width;
        height: root.height;
    }
    
}
