{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'slint-demo'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=slint-demo"
                ],
                "filter": {
                    "name": "slint-demo",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'slint-demo'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=slint-demo",
                    "--package=slint-demo"
                ],
                "filter": {
                    "name": "slint-demo",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'slint-demo'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=slint-demo",
                    "--package=slint-demo"
                ],
                "filter": {
                    "name": "slint-demo",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}